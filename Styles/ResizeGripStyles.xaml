<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ControlTemplate x:Key="WpfUtilsResizeThumbCornerTemplate" TargetType="{x:Type Thumb}">

		<Grid Background="Transparent">
			<Path
				Width="10"
				Height="10"
				Margin="{TemplateBinding Padding}"
				Data="M 0,10 L 6,10 A 4,4 45 0 0 10,6 L 10,6 10,0 0,10"
				Fill="{TemplateBinding Background}"
				Stretch="Fill" />

			<Path
				x:Name="HoverPath"
				Width="10"
				Height="10"
				Margin="{TemplateBinding Padding}"
				Data="M 0,10 L 6,10 A 4,4 45 0 0 10,6 L 10,6 10,0 0,10"
				Fill="{TemplateBinding Foreground}"
				Opacity="0"
				Stretch="Fill" />
		</Grid>

		<ControlTemplate.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter TargetName="HoverPath" Property="Opacity" Value="1" />
			</Trigger>

		</ControlTemplate.Triggers>

	</ControlTemplate>

	<Style x:Key="WpfUtilsResizeThumbCorner" TargetType="{x:Type Thumb}">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Foreground" Value="{DynamicResource TrimBrush}" />
		<Setter Property="OverridesDefaultStyle" Value="True" />
		<Setter Property="Padding" Value="0,0,4,4" />
		<Setter Property="Template" Value="{StaticResource WpfUtilsResizeThumbCornerTemplate}" />
	</Style>

	<Style
		x:Key="WpfUtilsResizeThumbBottomRight"
		BasedOn="{StaticResource WpfUtilsResizeThumbCorner}"
		TargetType="{x:Type Thumb}">
		<Setter Property="Cursor" Value="SizeNWSE" />
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="Margin" Value="0,0,-2,-2" />
		<Setter Property="VerticalAlignment" Value="Bottom" />
	</Style>

	<Style
		x:Key="WpfUtilsResizeThumbBottomLeft"
		BasedOn="{StaticResource WpfUtilsResizeThumbCorner}"
		TargetType="{x:Type Thumb}">
		<Setter Property="Cursor" Value="SizeNESW" />
		<Setter Property="HorizontalAlignment" Value="Left" />
		<Setter Property="Margin" Value="-2,0,0,-2" />
		<Setter Property="VerticalAlignment" Value="Bottom" />
	</Style>

</ResourceDictionary>
