<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:WpfUtils.Controls">

	<ControlTemplate
		x:Key="WpfUtilsCheckBoxTemplate"
		TargetType="{x:Type CheckBox}">

		<Border
			Background="{TemplateBinding Background}"
			Style="{DynamicResource WpfUtilsControlBorder}">
			<Grid
				x:Name="Content"
				Cursor="Hand">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>

				<Border
					x:Name="HoverBorder"
					Grid.Column="0"
					Grid.ColumnSpan="2"
					Opacity="0"
					Style="{DynamicResource WpfUtilsControlHoverBorder}" />

				<Ellipse
					x:Name="CheckMark"
					Grid.Column="0"
					Width="6"
					Height="6"
					Margin="8,0,4,0"
					VerticalAlignment="Center"
					Fill="{DynamicResource ForegroundLightBrush}"
					Opacity="0.25" />

				<ContentPresenter
					Grid.Column="1"
					Margin="{TemplateBinding Padding}"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					RecognizesAccessKey="True" />
			</Grid>
		</Border>

		<ControlTemplate.Triggers>
			<Trigger Property="IsChecked" Value="true">
				<Setter TargetName="CheckMark" Property="Fill" Value="{DynamicResource TrimBrush}" />
				<Trigger.EnterActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="CheckMark"
								Storyboard.TargetProperty="Opacity"
								To="1"
								Duration="00:00:00.25" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.EnterActions>
				<Trigger.ExitActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="CheckMark"
								Storyboard.TargetProperty="Opacity"
								To="0.25"
								Duration="00:00:00.25" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.ExitActions>
			</Trigger>
			<Trigger Property="IsEnabled" Value="false">
				<Trigger.EnterActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="Content"
								Storyboard.TargetProperty="Opacity"
								From="1"
								To="0.25"
								Duration="00:00:00.1" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.EnterActions>

				<Trigger.ExitActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="Content"
								Storyboard.TargetProperty="Opacity"
								From="0.25"
								To="1"
								Duration="00:00:00.2" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.ExitActions>
			</Trigger>

			<Trigger Property="IsMouseOver" Value="true">
				<Trigger.EnterActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="HoverBorder"
								Storyboard.TargetProperty="Opacity"
								From="0"
								To="1"
								Duration="00:00:00.1" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.EnterActions>

				<Trigger.ExitActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="HoverBorder"
								Storyboard.TargetProperty="Opacity"
								From="1"
								To="0"
								Duration="00:00:00.2" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.ExitActions>

			</Trigger>

		</ControlTemplate.Triggers>

	</ControlTemplate>

	<Style
		x:Key="WpfUtilsCheckBox"
		TargetType="{x:Type CheckBox}">

		<Setter Property="Height" Value="26" />
		<Setter Property="SnapsToDevicePixels" Value="true" />
		<Setter Property="OverridesDefaultStyle" Value="true" />
		<Setter Property="Template" Value="{StaticResource WpfUtilsCheckBoxTemplate}" />
		<Setter Property="Foreground" Value="{DynamicResource ForegroundLightBrush}" />
		<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}" />
		<Setter Property="FocusVisualStyle" Value="{DynamicResource WpfUtilsFocusVisualStyle}" />
		<Setter Property="Padding" Value="2,0" />
	</Style>


	<ControlTemplate
		x:Key="WpfUtilsLockCheckBoxTemplate"
		TargetType="{x:Type CheckBox}">

		<Border
			Background="{TemplateBinding Background}"
			Style="{DynamicResource WpfUtilsControlBorder}">
			<Grid x:Name="Content">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>

				<Border
					x:Name="CheckBorder"
					Grid.Column="0"
					Width="25"
					CornerRadius="6,0,0,6"
					Style="{DynamicResource WpfUtilsControlBorder}" />

				<Border
					x:Name="HoverBorder"
					Grid.Column="0"
					Width="25"
					BorderThickness="1"
					CornerRadius="6,0,0,6"
					Opacity="0"
					Style="{DynamicResource WpfUtilsControlHoverBorder}" />

				<controls:IconBlock
					x:Name="CheckMark"
					Grid.Column="0"
					Margin="0,2,0,0"
					FontSize="10"
					Foreground="{DynamicResource ForegroundLightBrush}"
					Icon="LockOpen">
					<controls:IconBlock.RenderTransform>
						<TranslateTransform />
					</controls:IconBlock.RenderTransform>
				</controls:IconBlock>
			</Grid>
		</Border>

		<ControlTemplate.Triggers>
			<Trigger Property="IsChecked" Value="true">
				<Setter TargetName="CheckMark" Property="Foreground" Value="{DynamicResource TrimBrush}" />
				<Setter TargetName="CheckMark" Property="Icon" Value="Lock" />

				<Trigger.EnterActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimationUsingKeyFrames
								BeginTime="00:00:00"
								Storyboard.TargetName="CheckMark"
								Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
								<SplineDoubleKeyFrame
									KeyTime="00:00:00.00"
									Value="0" />
								<SplineDoubleKeyFrame
									KeyTime="00:00:00.10"
									Value="-3" />
								<SplineDoubleKeyFrame
									KeyTime="00:00:00.15"
									Value="-2" />
								<SplineDoubleKeyFrame
									KeyTime="00:00:00.18"
									Value="0" />
							</DoubleAnimationUsingKeyFrames>
						</Storyboard>
					</BeginStoryboard>
				</Trigger.EnterActions>
			</Trigger>
			<Trigger Property="IsEnabled" Value="false">
				<Trigger.EnterActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="Content"
								Storyboard.TargetProperty="Opacity"
								From="1"
								To="0.25"
								Duration="00:00:00.1" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.EnterActions>

				<Trigger.ExitActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="Content"
								Storyboard.TargetProperty="Opacity"
								From="0.25"
								To="1"
								Duration="00:00:00.2" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.ExitActions>
			</Trigger>

			<Trigger Property="IsMouseOver" Value="true">
				<Trigger.EnterActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="HoverBorder"
								Storyboard.TargetProperty="Opacity"
								From="0"
								To="1"
								Duration="00:00:00.1" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.EnterActions>

				<Trigger.ExitActions>
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimation
								Storyboard.TargetName="HoverBorder"
								Storyboard.TargetProperty="Opacity"
								From="1"
								To="0"
								Duration="00:00:00.2" />
						</Storyboard>
					</BeginStoryboard>
				</Trigger.ExitActions>

			</Trigger>

		</ControlTemplate.Triggers>

	</ControlTemplate>

	<Style
		x:Key="WpfUtilsLockCheckBox"
		TargetType="{x:Type CheckBox}">

		<Setter Property="Height" Value="22" />
		<Setter Property="Margin" Value="0,1,1,1" />
		<Setter Property="SnapsToDevicePixels" Value="true" />
		<Setter Property="OverridesDefaultStyle" Value="true" />
		<Setter Property="Template" Value="{StaticResource WpfUtilsLockCheckBoxTemplate}" />
		<Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
		<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}" />
		<Setter Property="FocusVisualStyle" Value="{DynamicResource WpfUtilsFocusVisualStyle}" />
	</Style>

</ResourceDictionary>